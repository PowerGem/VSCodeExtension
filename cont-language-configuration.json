{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "//",
        // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
        "blockComment": [ "/*", "*/" ]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
          "start": "^\\s*((c|C)(o|O)(N|n)(t|T)(i|I)(n|N)(g|G)(e|E)(N|n)(c|C)(Y|y)|(o|O)(u|U)(t|T)(a|A)(g|G)(e|E))\\b",
          "end": "^\\s*(e|E)(N|n)(D|d)\\b"
        }
      },
      
        "indentationRules": {
          "increaseIndentPattern": "^\\s*((c|C)(o|O)(N|n)(t|T)(i|I)(n|N)(g|G)(e|E)(N|n)(c|C)(Y|y)|(o|O)(u|U)(t|T)(a|A)(g|G)(e|E))\\b.*$",
          "decreaseIndentPattern": "^\\s*(e|E)(N|n)(D|d)\\b.*$"
        }
      
}