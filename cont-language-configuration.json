{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "//",
        // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
        "blockComment": [ "/*", "*/" ]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
          "start": "(^\\s*(c|C)(o|O)(N|n)(t|T)(i|I)(n|N)(g|G)(e|E)(N|n)(c|C)(Y|y)|^\\s*(o|O)(u|U)(t|T)(a|A)(g|G)(e|E)|\\s*(l|L)(o|O)(a|A)(d|D)\\s+(t|T)(h|H)(r|R)(o|O)(w|W)(o|O)(v|V)(e|E)(r|R)|\\s*(d|D)(i|I)(s|S)(p|P)(a|A)(t|T)(c|C)(h|H)(\\s+((f|F)(i|I)(r|R)(s|S)(t|T)(l|L)(e|E)(v|V)(e|E)(l|L)|(u|U)(p|P)|(d|D)(o|O)(w|W)(n|N)))?)\\b",
          "end": "^\\s*(e|E)(N|n)(D|d)\\b"
        }
      },
      
        "indentationRules": {
          "increaseIndentPattern": {
            "pattern": "(^\\s*contingency|^\\s*load\\s+throwover|^\\s*outage|\\s*dispatch(\\s+(firstlevel|up|down))?)\\b.*$",
            "flags":"i"
          },

          "decreaseIndentPattern": {
            "pattern": "^\\s*(end)\\b.*$",
            "flags":"i"
          }
        }
      
}